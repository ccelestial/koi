<div class="center container w-56 pd-t-8">

  <div class="tx-c pd-b-3 devise-katalyst-logo">
  </div>

  <h1 class="katalyst titlebar border-3px rd-t-5px pd-lr-2 h-55px ln-h-55px tx-25px">Sign in</h1>

  <%= simple_form_for resource,
                      as: resource_name,
                      url: session_path(resource_name),
                      html: { class: "simple form" } do |f| %>

    <div class="bg-grey-f0 pd-ltr-2 br-b br-grey-c0 pd-b-1">

      <div class="vertical list tx-grey-70 tx-13px ln-h-2">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "tx-1u3 ln-h-2 as-blk" } %>
        <%= f.input :password, required: false, input_html: { class: "tx-1u3 ln-h-2 as-blk" } %>

        <% if flash[:error] %>
          <p class="error"><%= flash[:error] %></p>
        <% end %>

        <% if flash[:alert] %>
          <p class="error"><%= flash[:alert] %></p>
        <% end %>
        <div class="h-1"></div>

        <%= f.input :remember_me, as: :boolean, input_html: { class: "" }, label: "Keep me logged in on this computer" if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="bg-grey-e0 pd-l-2 h-55px ln-h-55px rd-b-5px br-t br-grey-fc tx-11px">

      <ul class="hoverable hollow grey rounded-5px padded-1 spaced-1 inline middle-aligned buttons fonted-11px aln-m">

        <li class="solid orange hover-shadow padded-2 ln-h-3 h-3">
          <%= f.button :submit, "Sign in" %>
        </li>

        <%- if devise_mapping.recoverable? &&
               controller_name != 'passwords' %>
          <li class="round ln-h-25px h-25px">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "pull-u-1px" %>
          </li>
        <% end -%>

        <%#= render "devise/shared/links" %>
      </ul>
    </div>

  <% end %>

</div>
