<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="tx-c tx-11px">
    <div class="spaced-3px inline elements flt-l">
      <%= first_page_tag %>
      <%= prev_page_tag %>
    </div>

    <div class="spaced-3px inline elements flt-r">
      <%= next_page_tag %>
      <%= last_page_tag %>
    </div>

    <div class="spaced-3px inline elements">
      <% each_page do |page| -%>
        <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
    </div>
  </nav>
<% end -%>
