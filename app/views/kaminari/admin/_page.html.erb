<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="hoverable rounded-3px padded-1 solid orange page button as-iblk ln-h-2 <%= "disabled" if page.current? %>">
  <%= link_to  page, "#{ url unless page.current? }", opts = { :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil, :data => { :get_script => true } } %>
</div>
