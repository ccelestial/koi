<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="hoverable rounded-3px padded-1 solid orange first button as-iblk ln-h-2 <%= "disabled" if current_page.first? %>">
  <%= link_to raw(t 'views.pagination.first'), "#{ url unless current_page.first? }", :remote => remote, :data => { :get_script => true } %>
</div>

