<%=
  begin
    render "form_field_#{f.object.field_type}", :f => f, :attr => attr, wrapper_opts: wrapper_opts, input_opts: input_opts
  rescue ActionView::MissingTemplate
    render "form_field_default", :f => f, :attr => attr, wrapper_opts: wrapper_opts, input_opts: input_opts
  end
%>
<% if !current_admin.god? && !f.object.hint.blank? %>
  <p><%= f.object.hint %></p>
<% end %>
