<% if @setting %>
  <%= render "shared/flash_messages" %>
  <%= simple_form_for [:admin, @setting], remote: true, html: { multipart: true, class: "koi-admin-crud-form" } do |f| %>
    <%= f.input :set_type, as: :hidden %>
    <%= f.input :set_id, as: :hidden %>
    <%= f.input :url, as: :hidden %>
    <%= f.input :meta_title %>
    <%= f.input :meta_description %>
    <ol class="unmarked-list floated-l-list spaced-r-1-list">
      <li>
        <%= content_tag :button, "Save", type: "submit", name: "commit", value: "Save" %>
      </li>
    </ol>
  <% end %>
<% end %>

