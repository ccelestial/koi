<% 
  crud_settings = resource_class.crud.find(:fields, attr)

  wrapper_opts = {}
  input_opts = {} 
  wrapper_opts[:class] = "form--horizontal"

  if crud_settings
    wrapper_opts[:data] = crud_settings[:data]
    input_opts[:class] += " form--#{crud_settings[:size]}" if crud_settings[:size]
  end
%>

<% data = resource_class.crud.find(:fields, attr, :data) %>
<% if data.nil? %>
  <%= f.input attr.to_sym, :as => :radio, wrapper_html: { class: "form--horizontal" } %>
<% else %>
  <%= f.input attr.to_sym, :as => :radio, collection: data, wrapper_html: { class: "form--horizontal" } %>
<% end %>

