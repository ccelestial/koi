<%= f.input attr, as: :string, input_html: { class: "datetime input datetimepicker form--medium", value: resource.send(attr).strftime('%a, %b %e %Y at %l:%M %p') } %>

<script>
  $('.datetimepicker').datetimepicker({
    stepMinute:  5,
    controlType: 'select',
    timeFormat:  'h:mm TT',
    dateFormat:  'D, M d yy at'
  });
</script>
