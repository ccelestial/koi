<ol class="adjusted hoverable hover-shadow rounded-3px padded-1 spaced-1 inline solid grey buttons h-25px ln-h-25px tx-12px">
  <li class="orange">
    <%= content_tag :button, "Save", type: "submit", name: "commit", value: "Save" %>
  </li>
  <li>
    <%= content_tag :button, "Save & Continue", type: "submit", name: "commit", value: "Continue" %>
  </li>
  <% unless resource.new_record? %>
    <li>
      <%= link_to("Delete", resource_path, confirm: "Are you sure?", method: :delete) %>
    </li>
  <% end %>
  <li>
    <%= link_to "Back", resource_class %>
  </li>
</ol>
