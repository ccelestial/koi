<div class="form-action button-group">
  <div>
    <%= content_tag :button, "Save", type: "submit", name: "commit", value: "Save", class: "button__save" %>
  </div>
  <div>
    <%= content_tag :button, "Save & Continue", type: "submit", name: "commit", value: "Continue", class: "button__save-continue" %>
  </div>
  <div>
    <%= link_to "Delete", resource_path, data: { confirm: "Are you sure?" }, method: :delete, class: "button__error" if !resource.new_record? && is_allowed?(:destroy) %>
  </div>
  <div>
    <%= link_to "Back", collection_path, :class => "button__back" if is_allowed?(:index) %>
  </div>
</div>
