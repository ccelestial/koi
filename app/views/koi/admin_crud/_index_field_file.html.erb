<%
  klass         = object.class
  value         = object.send attr
  kind          = klass.crud.find(:fields, attr, :type)
%>

<% unless value.nil? %>
  <%= 
    begin
      link_to attachment_image_tag(value, class: "listing--thumbnail", height: 25), value.url, title: value.name, data: { lightbox: "image" } 
    rescue Dragonfly::Job::Fetch::NotFound
      "File missing"
    end
  %>
<% else %>
  No attached <%= kind %>
<% end %>
