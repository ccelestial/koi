<div class="action view">
  <%= render 'edit_title' %>

  <% if is_settable? %>
    <%- content_for :title_tabs do -%>
      <%= render "index_settings_navigation" %>
    <%- end -%>
  <% end %>
    
  <div class="tabs--pane" id="tab-main" data-tab-for="tab-main">
    <%= render 'edit_form' %>
    <%= render 'edit_form_actions' %>
  </div>

  <% if is_settable? %>
    <%= render "index_settings" %>
  <% end %>

  <%- if is_reportable? -%>
    <div class="tabs--pane" id="tab-reports" data-tab-for="tab-reports">
      <!-- Placeholder for reports link showing on records -->
    </div>
  <%- end -%>

</div>