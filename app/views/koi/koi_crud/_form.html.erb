<% form_path = [:admin, resource] %>

<% form_path.insert(1, parent) if respond_to?(:parent) && !parent.nil? %>

<%= simple_form_for form_path, html: { multipart: true } do |f| %>
  <%= render "form_parent",  { :f => f } %>
  <%= render "form_errors",  { :f => f } %>
  <%= render "form_fields",  { :f => f } %>
  <%= render "form_buttons", { :f => f } %>
<% end %>

