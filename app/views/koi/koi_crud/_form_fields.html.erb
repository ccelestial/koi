<% klass = f.object.class %>
<%- klass.admin_attributes(:form).each do |attr| -%>
  <%=
    assoc    = klass.reflect_on_association(attr)
    partial  = 'form_field'
    partial += '_nested' if assoc && !assoc.belongs_to? && assoc.is_nested?
    render partial, :f => f, :attr => attr
  %>
<%- end -%>
