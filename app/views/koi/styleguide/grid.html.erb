  <hr />

  <h2>Responsive Grid</h2>

  <div>
    <div class="row">
      <div class="col-1-4 col-1-2m">
        <div class="panel__passive">
          .col-1-4.col1-2m
        </div>
      </div>
      <div class="col-1-4 col-1-2m">
