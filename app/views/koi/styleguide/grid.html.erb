<div class="content">

  <h2>Basic Grid</h2>

  <div>
    <div class="row">
      <div class="col-1-2">
        <div class="panel__passive">
          .col-1-2
        </div>
      </div>
      <div class="col-1-2">
        <div class="panel__passive">
          .col-1-2
        </div>
      </div>

      <div class="col-1-3">
        <div class="panel__passive">
          .col-1-3
        </div>
      </div>
      <div class="col-1-3">
        <div class="panel__passive">
          .col-1-3
        </div>
      </div>
      <div class="col-1-3">
        <div class="panel__passive">
          .col-1-3
        </div>
      </div>

      <div class="col-1-4">
        <div class="panel__passive">
          .col-1-4
        </div>
      </div>
      <div class="col-1-4">
