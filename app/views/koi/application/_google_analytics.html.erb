<% unless Translation.find_by_key('site.show.dashboard.analytics').try(:value).eql?("true") %>
  <p>Please set your google anlytics credentials <%= link_to "here", translations_path %></p>
<% else %>
  <div class="row">
    <div class="span17"><h2><small>Site traffic from 22 February 2012 to 10 May 2012</small></h2></div>
  </div>

  <div class="row space-b-2">
    <div class="widget span4">
      <div class="widget-header">Page views</div>
      <div class="widget-body">2,773</div>
      <div class="widget-footer widget-footer-increase">18.3% increase</div>
    </div>
    <div class="widget span4">
      <div class="widget-header">Unique Visitors</div>
      <div class="widget-body">1,291</div>
      <div class="widget-footer widget-footer-decrease">18.3% decrease</div>
    </div>
    <div class="widget span4">
      <div class="widget-header">Page views</div>
      <div class="widget-body">2,773</div>
      <div class="widget-footer widget-footer-increase">18.3% increase</div>
    </div>
    <div class="widget span4">
      <div class="widget-header">Unique Visitors</div>
      <div class="widget-body">1,291</div>
      <div class="widget-footer widget-footer-decrease">18.3% decrease</div>
    </div>
  </div>

  <div class="row  space-b-2">
    <div class="span14"><i class="icon-refresh"></i> <strong><%= link_to "Refresh data", "?analytics=true" %></strong></div>
    <div class="3"><i class="icon-signal"></i> <strong><a href="http://www.google.com/analytics/" target="_blank">Full analytics</a></strong></div>
  </div>
<% end %>

  <table class="table padded-sides ruled br br-grey-d8 round-b-5px ln-h-3">
    <thead>
      <tr class="control txt-11px txt-grey-54 bg-grey-f4">
        <th>Path</th>
        <th>Pageviews</th>
        <th>Unique Pageviews</th>
        <th>Exits</th>
      </tr>
    </thead>
    <% @result.each do |r| %>
    <tr>
      <td><%= truncate r.page_path, length: 50 %></td>
      <td><%= r.pageviews %></td>
      <td><%= r.unique_pageviews %></td>
      <td><%= r.exits %></td>
    </tr>
    <% end %>
  </table>
