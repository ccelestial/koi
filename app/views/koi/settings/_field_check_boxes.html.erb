<% data = object.data_source.call if object.data_source %>
<% if data.nil? %>
  <%= f.input attr.to_sym, :as => :check_boxes, label: label %>
<% else %>
  <%= f.input attr.to_sym, :as => :check_boxes, collection: data, label: label %>
<% end %>

<%= render "koi/admin_crud/form_field_collection_errors", f: f, attr: attr %>
