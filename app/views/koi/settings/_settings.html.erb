<div class="settings">
  <div class="row">
    <div class="span17 bg-darkgrey">
      <div class="row">
        <div class="span9 ">&nbsp;</div>
        <div class="span8 color-darkgrey">
          <div class="space-half pull-right">
            <%= link_to "Add Setting", koi_engine.new_setting_path(prefix: settings_prefix), remote: true, class: "btn btn-small btn-primary" if current_admin.god? %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="index-fields">
    <table class="table space-b-0">
      <thead>
        <tr>
          <% Translation.admin_attributes(:index).each_with_index do |attr,i| %>
            <th><%= t "simple_form.labels.#{resource_class.model_name.i18n_key}.#{attr}", default: attr.to_s.titleize %></th>
          <% end %>
          <th class="span4">Actions</th>
        </tr>
      </thead>
      <tbody id="settings-list">
        <%= render "koi/settings/settings_list" %>
      </tbody>
    </table>
  </div>
</div>

<div id="modal-for-setting" class="modal fade hide-element as-clr">&nbsp;</div>
