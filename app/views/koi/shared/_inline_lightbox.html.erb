<%-
  title ||= false
  body_class ||= ""
  lightbox_class ||= ""
-%>

<div class="lightbox--body mfp-hide <%= lightbox_class -%>" id="<%= inline_id -%>">
  <div class="lightbox--header">
    <div class="lightbox--header--logo">
      <%= title ? title : "koi" -%>
    </div>
    <div class="lightbox--header--close" data-lightbox-close title="Close">
      <%= icon("close", stroke: "#fff") -%>
    </div>
  </div>
  <div class="lightbox--content <%= body_class -%>">
    <%= yield -%>
  </div>
</div>