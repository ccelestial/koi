<% content_for :stylesheets do %>
  <link href="http://fast.fonts.com/cssapi/e0715776-9606-47b7-93c0-721a8906e16b.css" rel="stylesheet" type="text/css" />
  <%= stylesheet_link_tag "koi/admin/application" %>
  <%= stylesheet_link_tag "koi/admin/application/menu" %>
  <%= stylesheet_link_tag "koi/admin/application/icon" %>  
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" src="http://use.typekit.com/zhc5yzn.js"></script>

  <script type="text/javascript">
    try { Typekit.load(); } catch (e) {}
  </script>

  <%= javascript_include_tag "koi/admin/global" %>
  <%= javascript_include_tag "koi/admin/highcharts" %>
  <%#= javascript_include_tag "koi/admin/jquery.tweet" %>

  <script type="text/javascript">
      $ (".superfish").application (true, function ($menu) { $menu.superfish ({ delay:100 }); });
  </script>
<% end %>

<% content_for :root do %>
  <%= content_for?(:global) ? yield(:global) : yield %>
<% end %>

<%= render :file => 'layouts/koi/root' %>
