<!DOCTYPE html>
<html>
  <head>
    <title>Dummy Frontend</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header>
      <%= render_navigation expand_all: true, items: NavItem.navigation("header_navigation") %>
    </header>

    <%= yield :title if content_for?(:title) %>
    <%= yield %>

    <footer>
      <%= render_navigation expand_all: true, items: NavItem.navigation("footer_navigation"), expand_all: true %>
    </footer>

  </body>
</html>
